@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">This is list of products with Github</h1>
   <table class="table table-bordered">
       <thead>
           <tr>
               <th scope="col">Product ID</th>
               <th scope="col">Product Name</th>
               <th scope="col">Quantity</th>
           </tr>
       </thead>

       <tbody>

           @foreach(var prodcut in Model.Products)
            {
                <tr>
                    <th scope="row">@prodcut.ProductID</th>
                    <th>@prodcut.ProductName</th>
                    <th>@prodcut.Quantity</th>
                </tr>
            }

       </tbody>
   </table>
</div>
